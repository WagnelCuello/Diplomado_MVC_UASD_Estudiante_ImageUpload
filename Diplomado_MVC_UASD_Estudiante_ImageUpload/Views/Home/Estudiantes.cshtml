
@{
    ViewBag.Title = "Estudiantes";
}

<h2>Estudiantes</h2>

<head>
    <style>
        .linkbtnfull {
            background-color: #f44336;
            color: white;
            font-size: medium;
            padding: 14px 25px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }

        table {
            font-family: Arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>

@using (Html.BeginForm("FileUpload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table>
        <tbody>
            <tr>
                <td style="text-align:center;background-color:black;color:white;font-family:Arial;font-style:oblique;font-size:x-large">
                    Registro de Estudiantes
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextBox("Nombres","","", new { required = "required", placeholder = "Digite su Nombre...", @class = "form-control" })
                    @Html.ValidationMessage("Nombres")
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextBox("Apellidos", "", "", new { required = "required", placeholder = "Digite su Apellido...", @class = "form-control" })
                    @Html.ValidationMessage("Apellidos")
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextBox("Direccion", "", "", new { required = "required", placeholder = "Digite su Direccion...", @class = "form-control" })
                    @Html.ValidationMessage("Direccion")
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextBox("Telefono", "", "", new { required = "required", placeholder = "Digite su Telefono...", @class = "form-control" })
                    @Html.ValidationMessage("Telefono")
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextBox("Cedula", "", "", new { required = "required", placeholder = "Digite su Cedula...", @class = "form-control" })
                    @Html.ValidationMessage("Cedula")
                </td>
            </tr>
            <tr>
                <td>
                    <input type="file" name="file" id="file" class="btn btn-primary" required />
                    @Html.ValidationMessage("file")
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" class="btn btn-primary" value="Save" />
                </td>
            </tr>
        </tbody>
    </table>
}